<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B2DFDB"
    android:orientation="vertical"
    tools:context=".WriteNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/create_note_subject_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Subject:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/create_note_subject_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/subjects"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/create_note_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Note Title:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/create_note_title_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Give a title..."
            android:inputType="textPersonName" />
    </LinearLayout>

    <TextView
        android:id="@+id/create_note_desc_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Short description:"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/create_note_desc_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Give a short description..."
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <TextView
        android:id="@+id/create_note_content_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="Content:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/create_note_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Copy/paste or write content here..."
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <Button
        android:id="@+id/create_note_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Save Note" />

</LinearLayout>